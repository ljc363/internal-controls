<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.internal.modules.sys.dao.SysUserPostDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="io.internal.modules.sys.entity.SysUserPostEntity" id="sysUserPostMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="postId" column="post_id"/>
    </resultMap>


    <delete id="deleteBatch">
        delete from sys_user_post where post_id in
        <foreach item="postId" collection="array" open="(" separator="," close=")">
            #{postId}
        </foreach>
    </delete>

    <select id="queryPostIdList" resultType="long">
        select post_id from sys_user_post where user_id = #{value}
    </select>

</mapper>